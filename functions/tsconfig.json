{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": [ "jest"],
    "typeRoots": ["./types", "./node_modules/@types"]

  },
  "compileOnSave": true,
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"],
  "include": [
    "src"
  ]
}
